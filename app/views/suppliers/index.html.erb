<h1 class="text-center"> Welcome to the Ski Store! </h1>

<h2 class="text-center"> Suppliers: </h2>

  <div class="container">
    <table class="table table-striped table-hover">
      <th> Name </th>
      <th> Email </th>
      <th> Phone </th>

      <% @suppliers.each do |supplier| %>
      <tr>
        <td> <a href="/supplier/<%= supplier.id %>"><%= supplier.name %> </a></td>
        <td> <%= supplier.email %> </td>
        <td>  <%= supplier.phone %> </td>
      </tr>
      <% end %>
    </table>
  </div>

<div class="text-center">
  <a href="/suppliers/new"> Add new skis here!</a>
</div>