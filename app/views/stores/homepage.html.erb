<h1> Welcome to the Ski Store! </h1>

<h2> Here are the 3 products for sale! </h2>
<div class="container">
  <table class="table table-striped table-hover">
   
    <th> Name </th>
    <th> Price </th>
    <th> Image </th>
    <th> Description </th>

      <% @products.each do |product| %>
    <tr>
        <td> <%= product.name %> </td>
        <td> $<%= product.price %> </td>
        <td> <img src="<%= product.image %>"/></td>
        <td>  <%= product.description %> </td>
    </tr>
      <% end %>
  </table>
</div>