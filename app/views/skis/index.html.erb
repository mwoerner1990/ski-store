<h1> Welcome to the Ski Store! </h1>

<h2> Here are the 3 products for sale! </h2>

  <div class="container">
    <table class="table table-striped table-hover">
      <th> Name </th>
      <th> Price </th>
      <th> Image </th>
      <th> Description </th>

      <% @skis.each do |ski| %>
      <tr>
        <td> <%= ski.name %> </td>
        <td> $<%= ski.price %> </td>
        <td> <img src="<%= ski.image %>"/></td>
        <td>  <%= ski.description %> </td>
      </tr>
      <% end %>
    </table>
  </div>