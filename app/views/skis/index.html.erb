<h1 class="text-center"> Welcome to the Ski Store! </h1>

<h2 class="text-center"> Products: </h2>

  <div class="container">
    <table class="table table-striped table-hover">
      <th> Name </th>
      <th> Price </th>
      <th> Image </th>
      <th> Description </th>
      <th> In Stock? </th>

      <% @skis.each do |ski| %>
      <tr>
        <td> <a href="/skis/<%= ski.id %>"><%= ski.name %> </a></td>
        <td> <%= number_to_currency(ski.price) %> </td>
        <td> <img src="<%= ski.image %>"></td>
        <td>  <%= ski.description %> </td>
        <td> <%= ski.stock %> </td>
      </tr>
      <% end %>
    </table>
  </div>

<div class="text-center">
  <a href="/skis/new"> Add new skis here!</a>
</div>